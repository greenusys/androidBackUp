<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout

                android:id="@+id/check_your_eligibility"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:backgroundTint="@color/colorFlower"
                android:orientation="vertical">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"

                    android:text="Check Your          Eligibility"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_latest_rally"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:backgroundTint="@color/colorAqua"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"


                    android:gravity="center"
                    android:text="Check Latest             Rally"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>






            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"


                    android:text="Latest Notification"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/check_rally"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pic"
                            />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"

                            android:gravity="center"
                            android:text="Check Rally "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/all_rally"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pic"
                            />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"

                            android:gravity="center"
                            android:text="All Rally"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/latest_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pic"
                            />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Latest Notification"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/admit_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pic"
                            />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Admit Card"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pic"
                            />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="More"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>


            </HorizontalScrollView>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Indian Army Preparation"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout

                    android:id="@+id/soldier_gd"
                    android:layout_width="3dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:backgroundTint="@color/colorFlower"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:gravity="center"

                        android:text="Soldier             GD"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/soldier_clerk"
                    android:layout_width="3dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAqua"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"


                        android:gravity="center"
                        android:text="Soldier        Clerk"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/soldier_tech"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_color2"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"

                        android:gravity="center"
                        android:text="Soldier       Technical"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/soldier_tradesmen"
                    android:layout_width="3dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorGrass"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"

                        android:gravity="center"
                        android:text="Soldier        Tradesmen"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/soldier_nursing"
                    android:layout_width="3dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bright_color"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:gravity="center"

                        android:text="Soldier    Nursing Ass."
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/education_havildar"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorFlower2"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:gravity="center"

                        android:text="Education          Havildar"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Daily Army Quiz"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/maths"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/light_color3"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="30dp"

                            android:text="Maths Quiz #1"
                           android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/gk"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="30dp"

                            android:text="Percentage Quiz #1"
                          android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/english"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"

                            android:text="GK Quiz #1"
                             android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/ca"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"

                            android:text="Reasoning Quiz #1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/light_color3"
                        android:id="@+id/allquiz"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"

                            android:text="All Quiz"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>


            </HorizontalScrollView>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Army News &amp; Current Affair"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </LinearLayout>


            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:backgroundTint="@color/colorbg"
                        android:id="@+id/hindi_lang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="30dp"

                            android:text="Hindi"
                           android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:backgroundTint="@color/colorGrassDark2"
                        android:id="@+id/english_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="30dp"
                            android:text="English"
                           android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>