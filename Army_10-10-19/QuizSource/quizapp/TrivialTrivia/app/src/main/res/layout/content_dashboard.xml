            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Army Preparation"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:weightSum="2"
                    android:id="@+id/soldier_gd"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:backgroundTint="@color/colorFlower"
                    android:orientation="vertical">


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Soldier"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="GD"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="23sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="13dp"
                    android:weightSum="2"
                    android:id="@+id/soldier_clerk"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAqua"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Soldier"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Clerk"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="23sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="13dp"
                    android:weightSum="2"
                    android:id="@+id/soldier_tech"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_color2"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Soldier"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Technical"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_marginStart="14dp"
                android:layout_marginEnd="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:weightSum="2"

                    android:id="@+id/soldier_tradesmen"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorGrass"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">



                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Soldier"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tradesman"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="19sp" />


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginStart="13dp"
                    android:id="@+id/soldier_nursing"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bright_color"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">



                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Nursing"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Assistant"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="19sp" />


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginStart="13dp"
                    android:id="@+id/education_havildar"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorFlower2"
                    android:background="@drawable/button_round"
                    android:orientation="vertical">


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Education"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Havildar"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </LinearLayout>


            </LinearLayout>

