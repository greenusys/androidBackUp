<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:layout_gravity="top"
        android:background="@color/guillotine_background" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    style="@style/Toolbar"
                    app:contentInsetStart="0dp">


                    <ImageView
                        android:id="@+id/back"
                        style="@style/ImageView.Hamburger"
                        android:src="@drawable/back_arrow" />

                    <com.example.digitalforgeco.widget.CanaroTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/slide_3_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/guillotine_item_text_size" />
                    <TextView
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableEnd="@drawable/history"
                        android:gravity="end"
                        android:src="@drawable/history" />


                </androidx.appcompat.widget.Toolbar>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="40dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Fahrenheit"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:clickable="true"
                                android:id="@+id/farhen"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>
                        <!--first row-->

                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Celsius"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:id="@+id/celsius"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>
                        <!--first row-->

                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Kelvin"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:id="@+id/kelvin"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>