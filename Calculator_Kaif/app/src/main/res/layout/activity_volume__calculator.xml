<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:layout_gravity="top"
        android:background="@color/guillotine_background" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <androidx.appcompat.widget.Toolbar
                    style="@style/Toolbar"
                    app:contentInsetStart="0dp">


                    <ImageView
                        android:id="@+id/back"
                        style="@style/ImageView.Hamburger"
                        android:src="@drawable/back_arrow" />

                    <com.example.digitalforgeco.widget.CanaroTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/slide_9_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/guillotine_item_text_size" />

                    <TextView
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableEnd="@drawable/history"
                        android:gravity="end"
                        android:src="@drawable/history" />

                </androidx.appcompat.widget.Toolbar>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="440dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="40dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Length"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:id="@+id/length"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>
                        <!--first row-->

                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Width"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:id="@+id/breadth"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>
                        <!--first row-->

                        <!--first row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <com.example.digitalforgeco.widget.CanaroTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".7"
                                android:text="Height"
                                android:textColor="@color/guillotine_background"
                                android:textSize="20dp" />


                            <EditText
                                android:id="@+id/heights"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bor"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="@color/selected_item_color"
                                android:textColorHint="@color/selected_item_color"
                                android:textSize="22dp" />


                        </LinearLayout>
                        <!--first row-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                        <com.example.digitalforgeco.widget.CanaroTextView
                           android:layout_marginTop="10dp"
                            android:id="@+id/result_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/box_8"
                            android:textSize="20dp" />


                        <com.example.digitalforgeco.widget.CanaroTextView
                           android:layout_marginTop="10dp"
                            android:id="@+id/result_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/box_8"
                            android:textSize="25dp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <com.example.menu_library.FButton
                                    android:id="@+id/cm"
                                    android:layout_marginLeft="50dp"
                                    app:buttonColor="@color/selected_item_color_2"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left|top"
                                    android:layout_margin="10dp"
                                    android:textSize="20dp"
                                    android:text="Cm"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    fbutton:shadowEnabled="true" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >

                                <com.example.menu_library.FButton
                                    android:id="@+id/inch"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left|top"
                                    android:layout_margin="10dp"
                                    android:layout_marginLeft="50dp"
                                    android:layout_weight="1"
                                    android:text="Inch"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    android:textSize="20dp"
                                    app:buttonColor="@color/selected_item_color_2"
                                    fbutton:shadowEnabled="true" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/m3_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle"/>

                            <ImageView
                                android:id="@+id/f3_button"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle"/>

                            <ImageView
                                android:id="@+id/cm3_button"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle"/>



                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cube"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>