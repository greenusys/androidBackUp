<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.currencyconverter">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".widget.DarkThemeApplication"
        android:allowBackup="true"
        android:icon="@drawable/cur_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cur_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.Global_Currency"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme3">

        </activity>

        <activity android:name=".activity.GraphActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme3">

        </activity>



        <activity android:name=".activity.News_Description" />
        <activity android:name=".activity.Graph_Country_List"
            android:theme="@style/AppTheme3"
            android:parentActivityName=".activity.GraphActivity"/>
        <activity android:name=".activity.News_List" />
        <activity android:name=".activity.Setting" />
        <activity android:name=".activity.Show_Country_List"
            android:theme="@style/AppTheme3"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Splash_Screen" >

        </activity>


        <activity
            android:name=".activity.About_us"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme3"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>