<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">/>


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/elbg"
        app:cardCornerRadius="20dp"

        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:id="@+id/myview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000000"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:text="EL-TECH"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/colorPrimary"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:visibility="gone"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="00dp"
                        android:text="hello1"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/txthname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:scaleType="fitXY"
                        android:textAllCaps="true"
                        android:text="ProName"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textStyle="bold"
                        tools:ignore="Suspicious0dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:textAllCaps="true"
                        android:padding="8dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="00dp"
                            android:textAllCaps="true"
                            android:text="Rate"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtrate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="00dp"
                            android:text="Rate"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtquy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="Quantity"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtquty1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Quantity"
                            android:textAllCaps="true"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:scaleType="fitXY"
                            android:textAllCaps="true"
                            android:text="Amount"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtamout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:text="Amount1"
                            android:textAllCaps="true"
                            android:textStyle="bold"

                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"

                >

                <ImageView
                    android:id="@+id/img_qot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitXY"
                    android:textAllCaps="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txtdec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginLeft="0dp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>