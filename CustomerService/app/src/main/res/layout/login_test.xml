<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/elbg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:textColor="#000"
                android:textAllCaps="true"
                android:text="FORGET PASSWORD"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_mail"
                android:hint="EMAIL"
                android:textAppearance="?android:textAppearanceLarge"
                android:textAllCaps="true"
                android:paddingTop="15dp"
                android:drawableLeft="@drawable/email"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:background="#fff"
                android:textSize="14sp"
                android:textColor="#000"
                android:textColorHint="#a000000f"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_old_password"
                android:textAppearance="?android:textAppearanceLarge"
                android:hint="OLD PASSWORD"
                android:paddingTop="15dp"
                android:drawableLeft="@drawable/passwordicon"
                android:background="#fff"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="#000"
                android:textColorHint="#a000000f"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_new_password"
                android:hint="NEW PASSWORD"
                android:paddingTop="15dp"
                android:inputType="textPassword"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/passwordicon"
                android:background="#fff"
                android:textSize="14sp"
                android:textColor="#000"
                android:textColorHint="#a000000f"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_conf_password"
                android:hint="CONFIRMA PASSWORD"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/passwordicon"
                android:background="#fff"
                android:textSize="14sp"
                android:textColor="#000"
                android:textColorHint="#a000000f"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="55dp"
            android:id="@+id/next_forgot"
            android:background="@drawable/button_round"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit  "
                android:id="@+id/txt_login"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="18sp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb_login_forget"
                android:visibility="gone"
                android:indeterminate="true"
                style="?android:progressBarStyleSmall" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
