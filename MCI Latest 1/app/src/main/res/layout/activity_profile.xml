<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.registrationapp.ProfileActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:alpha=".1"
        android:src="@drawable/cats"/>
    <include
        android:id="@+id/profile_toolbar_layout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/profile_image"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <TextView
        android:id="@+id/profile_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="NAME"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:text="Amit Singh"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_name_label"
        app:layout_constraintBottom_toTopOf="@id/profile_name_label"
        app:layout_constraintLeft_toRightOf="@id/profile_name_label"/>

    <EditText
        android:id="@+id/profile_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:text="Amit Singh"
        android:visibility="invisible"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_name_label"
        app:layout_constraintBottom_toTopOf="@id/profile_name_label"
        app:layout_constraintLeft_toRightOf="@id/profile_name_label"/>



    <TextView
        android:id="@+id/profile_phnNo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="Contact"
        app:layout_constraintTop_toBottomOf="@id/profile_name_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profile_phnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_phnNo_label"
        app:layout_constraintBottom_toTopOf="@id/profile_phnNo_label"
        app:layout_constraintLeft_toLeftOf="@id/profile_name"/>

    <EditText
        android:id="@+id/profile_phnNo_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:visibility="invisible"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_phnNo_label"
        app:layout_constraintBottom_toTopOf="@id/profile_phnNo_label"
        app:layout_constraintLeft_toLeftOf="@id/profile_name"/>

    <TextView
        android:id="@+id/profile_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/profile_phnNo_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_email_label"
        app:layout_constraintLeft_toLeftOf="@id/profile_phnNo"
        app:layout_constraintBottom_toTopOf="@id/profile_email_label"/>

    <TextView
        android:id="@+id/profile_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="Class"
        app:layout_constraintTop_toBottomOf="@id/profile_email_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profile_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class 10"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_class_label"
        app:layout_constraintLeft_toLeftOf="@id/profile_phnNo"
        app:layout_constraintBottom_toTopOf="@id/profile_class_label"/>
    <EditText
        android:id="@+id/profile_class_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="********"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@id/profile_class_label"
        app:layout_constraintLeft_toLeftOf="@id/profile_phnNo"
        app:layout_constraintBottom_toTopOf="@id/profile_class_label"/>
    <Button
        android:id="@+id/profile_save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_margin="40dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/profile_class_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>





</android.support.constraint.ConstraintLayout>
