<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/testlt"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rv_pro_img_id"
                android:layout_width="match_parent"
                android:layout_height="140dp"

                android:scaleType="centerInside"
                android:src="@drawable/haircondition" />
            <TextView
                android:textSize="14dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:text="Face"
                android:id="@+id/rv_pro_txt_id"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:text="HABIBS HAIR CONDITIONER (400 ML.)"
                />
            <TextView
                android:background="@drawable/box"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:text="300.00 Rs"
                />

            <LinearLayout
                android:id="@+id/quick_view"


                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:text="Quick View"
                  android:drawableLeft="@drawable/view"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"

                    />




        </LinearLayout>





        </LinearLayout>






    </LinearLayout>
</LinearLayout>


