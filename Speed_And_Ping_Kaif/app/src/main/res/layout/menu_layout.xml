<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/back_arrow" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:background="@color/shareButton_background"
                android:id="@+id/std_map"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/house" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/home"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin"
                android:onClick="clear_history">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/clear" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/clear"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin"
                android:onClick="rate">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rate" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/rate"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin"
                android:onClick="share">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/share" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/share"
                    android:textColor="@color/white" />
            </LinearLayout>

          <!--  <LinearLayout
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin"
                android:onClick="feedback">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/feedback" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/feedback"
                    android:textColor="@color/white" />
            </LinearLayout>-->

            <LinearLayout
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="@dimen/guillotine_medium_margin"
                android:onClick="about_us">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/about_us" />

                <com.example.digitalforgeco.widget.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="@string/about"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>