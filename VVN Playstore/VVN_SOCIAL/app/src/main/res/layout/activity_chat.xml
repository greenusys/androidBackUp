<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:text="Piyush Mohan SIngh"
        android:textSize="22sp"
        android:id="@+id/frnd_name"
        android:textColor="#000"
        android:layout_height="match_parent" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/lnlayout"

        android:id="@+id/messagedata"
        />

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="No Chat Found"
        android:textSize="20sp"
        android:id="@+id/no_frnd_text"
        android:textColor="#000"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/lnlayout"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"

            android:layout_weight="1.5"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                android:id="@+id/ed_M_message"
                />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Send"
            android:id="@+id/bt_M_send"
            />
    </LinearLayout>


</RelativeLayout>
