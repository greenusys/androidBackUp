<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_trans"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/vidya" />

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView"
            style="@style/text_V_style"
            android:text="Welcome TO VVN CITY" />

        <EditText
            android:id="@+id/edt_mail"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/ic_person"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText

            android:drawableRight="@drawable/ic_visibility"
            android:id="@+id/edt_password"
            android:paddingRight="10dp"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/pass"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:background="@drawable/button_round"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonlogin"
            style="@style/buttonStyle"
            android:text="Log In" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_forgotPassword"
                style="@style/text_V_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Forgot Password?"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createNewAccount"
                style="@style/text_V_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Account"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>