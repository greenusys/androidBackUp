<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_trans"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/vidya" />


        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView"
            style="@style/text_V_style"
            android:text="Welcome TO VVN CITY" />

        <Button
            android:background="@drawable/button_round"
            android:onClick="student_login"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonlogin"
            style="@style/buttonStyle"
            android:text="Log In As Student" />
        <Button
            android:background="@drawable/button_round"
            android:onClick="teacher_login"
            android:layout_marginTop="30dp"
            android:id="@+id/buttonslogin"
            style="@style/buttonStyle"
            android:text="Log In As Teacher" />




    </LinearLayout>

</RelativeLayout>