<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_trans"
        android:orientation="vertical">


        <EditText
            android:id="@+id/full_name"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/ic_person"
            android:hint="Full Name"
            android:inputType="text" />


        <EditText
            android:id="@+id/email"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/ic_person"
            android:hint="Email"
            android:inputType="textEmailAddress" />
        <EditText
            android:maxLength="10"
            android:id="@+id/mobile"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/ic_person"
            android:hint="Mobile"
            android:inputType="number" />
        <EditText
            android:drawableRight="@drawable/ic_visibility"
            android:id="@+id/password"
            android:paddingRight="15dp"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/pass"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:drawableRight="@drawable/ic_visibility"
            android:id="@+id/cpassword"
            android:paddingRight="15dp"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/pass"
            android:hint="Comfirm Password"
            android:inputType="textPassword" />

        <Button
            android:background="@drawable/button_round"
            android:onClick="register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/register"
            style="@style/buttonStyle"
            android:text="Register" />



        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:onClick="login"
                android:layout_alignParentBottom="true"
                android:id="@+id/goto_login"
                style="@style/text_V_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already hava an account?"
                android:textSize="16dp"
                android:textStyle="bold" />


        </RelativeLayout>







    </LinearLayout>




</RelativeLayout>