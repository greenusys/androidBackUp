<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:background="@drawable/home_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:text="icosom"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:gravity="center|top"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:text="recharge"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bgicosom008"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:textColor="#C0000000"
            android:textSize="12sp"
            android:text="Total Balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="#C0000000"
            android:textSize="20sp"
            android:text="â‚¹ 0.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSendMoney"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_wc"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@drawable/shape_rectangle_abc_color"
            android:gravity="center"
            android:textColor="#C0000000"
            android:textSize="16sp"
            android:text="Send money to friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAddMoney"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_account_balance"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@drawable/shape_rectangle_abc_color"
            android:gravity="center"
            android:textColor="#C0000000"
            android:textSize="16sp"
            android:text=" Add money to wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
