<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbackgr"
    android:fitsSystemWindows="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:src="@drawable/icosom_bg"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <include layout="@layout/tag_friends_recycler_header_layout"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="* First Name"
                android:textSize="14sp"
                android:id="@+id/edt_firstName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="* Last Name"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_lastName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="* Birth Date (1995-11-22"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_birthDate"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="* Email Id"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_email"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/rg_gender"
                android:background="@drawable/custom_toolbar"
                android:padding="8dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/rb_male"
                    android:checked="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/rb_female"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="Phone"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_phone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="About"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_about"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="From"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_from"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/custom_toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Location"
                    android:textSize="14sp"
                    android:textColor="#80000000"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/sp_country"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_toolbar"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/sp_state"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_toolbar"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/sp_city"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_toolbar"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_toolbar"
                android:padding="12dp"
                android:hint="Website"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/edt_website"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/custom_toolbar"
                android:padding="5dp"
                android:visibility="invisible"
                android:id="@+id/txt_advanceProfile"
                android:hint="Advance profile"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_toolbar"
        android:layout_margin="8dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edit"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:letterSpacing="0.2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profile"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:letterSpacing="0.2"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="save"
                android:id="@+id/txt_save"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="?selectableItemBackground"
                android:textAllCaps="true"
                android:clickable="true"
                android:textSize="15sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>