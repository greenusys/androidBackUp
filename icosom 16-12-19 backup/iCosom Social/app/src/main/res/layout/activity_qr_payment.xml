<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icosom.social.activity.QrPayment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:padding="2dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/qr_cover_image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />


    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-40dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/qr_profile_image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder" />

    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nameicon"
                android:drawablePadding="8dp"
                android:text="Name"
                android:drawableTint="@color/colorPrimary"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/qr_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textColor="#80000000"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_id"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/frnd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textColor="#80000000"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_balance_wallet"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimary"
                android:text="Amount"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/qr_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:hint="amount"
                android:textColor="#80000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_balance_wallet"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimary"
                android:text="Voucher Code"
                android:textColor="#000"
                android:textSize="18sp" />
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/apply_code"
                    android:layout_width="0dp"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:hint="Code"
                    android:textColor="#80000000"
                    android:textSize="18sp" />
                <Button
                    android:onClick="check_voucher_code"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:hint="Apply"
                   android:backgroundTint="@color/light_blue"
                    android:textSize="18sp" />


            </LinearLayout>






        </LinearLayout>


        <TextView
            android:visibility="invisible"
            android:textColor="@color/green2"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/voucher_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher is Valid"
            android:layout_margin="10dp" />


        <Button
            android:id="@+id/qr_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
