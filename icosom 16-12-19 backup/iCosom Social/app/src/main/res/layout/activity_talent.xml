<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_talent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">



    <!--title bar layout-->
    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="22dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:onClick="back_activity"
                android:layout_marginTop="10dp"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_back_arrow" />


            <TextView
                android:id="@+id/title_text"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Icosom Talent"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#fff" />






        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <!--title bar  end layout-->




    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        >



    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="goto_singing_activity"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Singing"
                android:textSize="25dp"
                android:gravity="bottom|center"
                android:textColor="@color/tab_back"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/singing" />

        </LinearLayout>


        <LinearLayout
            android:onClick="goto_dancing_activity"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Dancing"
                android:textSize="25dp"
                android:gravity="bottom|center"                android:textColor="@color/tab_back"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/dancing" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="goto_comedy_activity"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Comedy"
                android:textSize="25dp"
                android:gravity="top|center"
                android:textColor="@color/tab_back"
                style="@style/TextAppearance.AppCompat.Caption"/>

        <ImageView
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/comedy" />

        </LinearLayout>



        <LinearLayout
            android:onClick="goto_gk_activity"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="General Knowledge"
                android:textSize="23dp"
                android:gravity="top|center"
                android:textColor="@color/tab_back"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/gk" />

        </LinearLayout>


    </LinearLayout>


    </LinearLayout>



</LinearLayout>
