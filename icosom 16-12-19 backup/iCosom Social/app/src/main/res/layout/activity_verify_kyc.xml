<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgicosom008">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/datas"
        android:layout_marginTop="150dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:id="@+id/edt_kyc_phone"
                android:inputType="number"
                android:background="@null"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#fff"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/btn_kyc"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:background="@drawable/login_button_drawable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next "
                android:id="@+id/txt_finish11"
                android:textColor="#000"
                android:textAllCaps="true"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:progressBarStyleSmall"
                android:indeterminateTint="#000"
                android:id="@+id/pb_finish_11" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/otp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter OTP"
                android:id="@+id/edt_kyc_otp"
                android:inputType="number"
                android:background="@null"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#fff"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/btn_finish_kyc"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:background="@drawable/login_button_drawable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finish "
                android:id="@+id/txt_finish22"
                android:textColor="#000"
                android:textAllCaps="true"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:progressBarStyleSmall"
                android:indeterminateTint="#000"
                android:id="@+id/pb_finish_22" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>