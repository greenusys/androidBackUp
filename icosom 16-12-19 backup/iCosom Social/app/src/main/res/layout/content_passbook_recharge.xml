<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.icosom.social.activity.PassbookRecharge"
    tools:showIn="@layout/activity_passbook_recharge">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="@drawable/shape_rectangle_abc_color"
            android:textColor="#B0000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="Transaction History"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:id="@+id/rv_passbook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>



</androidx.core.widget.NestedScrollView>
