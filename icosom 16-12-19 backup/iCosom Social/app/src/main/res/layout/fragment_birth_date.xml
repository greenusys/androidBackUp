<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbackgr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">





            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/edt_password"
                android:drawableRight="@drawable/ic_visibility"
                android:inputType="textPassword"
                android:background="@null"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password should be aleast 8 digit long."
                android:textColor="#fff"
                android:textSize="8sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#fff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:id="@+id/edt_confirmPassword"
                android:drawableRight="@drawable/ic_visibility"
                android:inputType="textPassword"
                android:background="@null"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#fff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hit next button means you are agree with our"
                android:textColor="#fff"
                android:textSize="8sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_termsConditions"
                android:text=" terms and conditions."
                android:textColor="#2196f3"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/lay_next"
            android:layout_gravity="right"
            android:gravity="center"
            android:background="@drawable/login_button_drawable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fINISH "
                android:id="@+id/txt_next"
                android:textColor="#000"
                android:textAllCaps="true"
                android:gravity="center"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:progressBarStyleSmall"
                android:id="@+id/pb_next"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>