<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"

    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:text="icosom"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:gravity="center|top"
        android:layout_marginTop="60dp"
        android:textColor="#80000000"
        android:textSize="16sp"
        android:text="wallet"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.icosom.social.Fragment.RechargeFragment">

        <TextView
            android:layout_marginBottom="32dp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="Add to account"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_margin="8dp"
                android:padding="8dp"
                android:textColor="#80000000"
                android:id="@+id/number111"
                android:hint="Phone"
                android:maxLength="13"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />




          <!--  <android.support.design.widget.TextInputEditText
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:scrollbars="vertical"
                />-->

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:background="@drawable/shape_rectangle_blue_color"
            android:id="@+id/SUBMIT111"
            android:layout_marginTop="16dp"
            android:layout_margin="16dp"
            android:textColor="#FFFFFFFF"
            android:padding="8dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Proceed"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <ProgressBar
            android:id="@+id/transfer1"
            style="?android:progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="#000"
            android:indeterminateTintMode="src_atop" />

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>

