<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shape_rectangle_abc_color"
    android:padding="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#80000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_paid_receive"
        android:gravity="center|top"
        android:text="Paid"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/td"
            android:textColor="#31b715"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Transaction details"/>

        <TextView
            android:gravity="center"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:id="@+id/txt_transaction_id"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="232346456567"/>

        <TextView
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/txt_transaction_date"
            android:padding="5dp"
            android:textColor="#80000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22nd Mar, 2018"/>

    </LinearLayout>

    <TextView
        android:textColor="#80000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_transaction_price"
        android:gravity="center|top"
        android:text="$ 8000"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />


</LinearLayout>