<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/back_arrow" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@color/box_5"
        android:onClick="home"
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/home_icon" />

        <com.example.digitalforgeco.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/home" />
    </LinearLayout>

    <LinearLayout
        android:onClick="goto_Tracking_List"
        android:id="@+id/tracking_history"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            android:tint="@color/white"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/history" />

        <com.example.digitalforgeco.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/tracking_history" />
    </LinearLayout>

    <LinearLayout
        android:onClick="share_app"
        android:id="@+id/share_app"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            android:tint="@color/white"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/share_app" />

        <com.example.digitalforgeco.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/share" />
    </LinearLayout>


 <LinearLayout
        android:onClick="about_us"
        android:id="@+id/about_us"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/about" />

        <com.example.digitalforgeco.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/about" />
    </LinearLayout>





</LinearLayout>