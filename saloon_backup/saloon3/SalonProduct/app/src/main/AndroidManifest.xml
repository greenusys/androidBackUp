<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.salonproduct">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Network.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Gson_Shimmer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Search_Products_Activity"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.View_All_Producs_Activity"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.Checkout_Billing_Activity"
            android:parentActivityName=".Activities.View_Cart" />
        <activity
            android:name=".Activities.View_Cart"
            android:theme="@style/AppTheme.TOP" />
        <activity android:name=".Activities.View_More_Reviews" />
        <activity
            android:name=".Activities.Product_Description"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.Show_Category_Products"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.forgetpass"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
          <!--  <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".Activities.logIn"
            android:theme="@style/AppTheme.TOP" />
        <activity
            android:name=".Activities.signup"
            android:theme="@style/AppTheme.TOP" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
    </application>

</manifest>