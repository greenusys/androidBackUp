<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Show_Category_Products">



    <!--title bar layout-->
    <RelativeLayout
        android:elevation="50dp"
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <ImageView
            android:onClick="back_activity"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/back_arrow" />



        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="left"
            android:text="The Men Store"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="end">



            <com.steelkiwi.library.view.BadgeHolderLayout
                android:id="@+id/view"
                android:onClick="goto_view_cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:bhl_default_badge_background="@color/colorPrimary"
                app:bhl_text_color="@android:color/white"
                app:bhl_text_size="12sp"
                app:bhl_badge_radius="10dp">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/cart" />
            </com.steelkiwi.library.view.BadgeHolderLayout>



        </LinearLayout>


    </RelativeLayout>

    <!--title bar  end layout-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_prodect"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
